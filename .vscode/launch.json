   "version": "0.2.0",
   "configurations": [
      {
         "name": "Python: Flask",
         "type": "python",
         "request": "launch",
         "module": "flask",
         "env": {
            "FLASK_APP": "app.py",
            "FLASK_ENV": "development"
         },
         "args": [
            "run",
            "--no-debugger",
            // "--cert=adhoc"
         ],
         "jinja": true,
         "justMyCode": true
      },
      {
         "name": "Python: Gunicorn",
         "type": "python",
         "request": "launch",
         "module": "gunicorn",
         "env": { 
             "GEVENT_SUPPORT": "True"
         },
         "args": [
            "-w 4",
            "-k gevent",
            "-b 127.0.0.1:5000",
            "wsgi:app"
         ],
         "jinja": true,
         "justMyCode": true
      }
   ]
}